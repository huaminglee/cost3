@model Cost.Models.RegisterModel
@{
    ViewBag.Title = "注册";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
@*    <h2>新建帐户</h2>*@
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>注册表单</legend>
        <p>
            @Html.LabelFor(m => m.UserName, new { style = "margin-right:2em" })
            @Html.TextBoxFor(m => m.UserName, new { style = "width:12em" })
        </p>
        <p>
            @Html.LabelFor(m => m.Password,new { style = "margin-right:2em" })
            @Html.PasswordFor(m => m.Password, new { style = "width:12em" })
        </p>
        <p>
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword, new { style = "width:12em" })
        </p>
        <input type="submit" value="注册" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
