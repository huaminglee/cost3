            caption: '材料消耗',
            height: 'auto',//
            autowidth: true,
            jsonReader:
            {
                root: "rows",  //数据模型
                page: "page",//数据页码
                total: "total",//数据总页码
                records: "records",//数据总记录数
                repeatitems: false,//如果设为false，则jqGrid在解析json时，会根据name(colmodel 指定的name)来搜索对应的数据元素（即可以json中元素可以不按顺序）
                cell: "cell",//root 中row 行
